<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field name="id" type="hidden"/>
        <field name="fullName_de" type="text" label="ORGANIZER_FULL_NAME_DE" maxlength="200" required="true"/>
        <field name="fullName_en" type="text" label="ORGANIZER_FULL_NAME_EN" maxlength="200" required="true"/>
        <field name="name_de" type="text" label="ORGANIZER_NAME_DE" maxlength="150" required="true"/>
        <field name="name_en" type="text" label="ORGANIZER_NAME_EN" maxlength="150" required="true"/>
        <field name="code" type="text" label="ORGANIZER_UNTIS_ID" maxlength="60" readonly="true"/>
        <field name="organizationIDs" type="OrganizationAssociations" label="ORGANIZER_ORGANIZATION"/>
        <field name="categoryID" type="Categories" label="ORGANIZER_CATEGORY" required="true"/>
        <field name="publishing" type="TermPublishing" label="ORGANIZER_PUBLISHING"/>
        <field name="gridID" type="Grids" label="ORGANIZER_GRID"/>
        <field name="active" type="list" label="ORGANIZER_ACTIVE" default="1">
            <option value="1">ORGANIZER_ACTIVE</option>
            <option value="0">ORGANIZER_INACTIVE</option>
        </field>
        <field name="suppress" type="list" label="ORGANIZER_SUPPRESS" default="0">
            <option value="0">ORGANIZER_SHOWN</option>
            <option value="1">ORGANIZER_SUPPRESSED</option>
        </field>
    </fieldset>
</form>
