<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details">
        <field name="untisID" type="MergeValues" label="UNTIS_ID"/>
        <field name="name" type="MergeValues" label="NAME"/>
        <field name="programID" type="MergeAssociations" label="PROGRAM" textcolumn="p.name,p.accredited,d.abbreviation"
               localized="true" glue=", " from="categories AS cat"
               innerJoins="programs AS p ON p.categoryID = cat.id,degrees AS d ON d.id = p.degreeID"/>
        <field name="organizationID" type="MergeDepartments" label="ORGANIZATIONS" resource="category"
               multiple="multiple"/>
        <field name="ids" type="MergeIDs" hidden="true"/>
    </fieldset>
</form>
