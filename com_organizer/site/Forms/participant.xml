<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field name="id" type="hidden"/>
        <field name="referrer" type="hidden"/>
        <field name="forename" type="text" required="true" class="input-15 required validate-name" label="ORGANIZER_FORENAME"/>
        <field name="surname" type="text" required="true" class="input-15 required validate-name" label="ORGANIZER_SURNAME"/>
        <field name="telephone" type="text" class="input-15 validate-telephone" label="ORGANIZER_TELEPHONE"/>
        <field name="address" type="text" required="true" class="input-15 required validate-address" label="ORGANIZER_STREET"/>
        <field name="zipCode" type="text" required="true" class="input-15 required validate-alphanumeric"
               label="ORGANIZER_ZIP_CODE"/>
        <field name="city" type="text" required="true" class="input-15 required validate-name" label="ORGANIZER_RESIDENCE"/>
        <field name="programID" type="Programs" label="ORGANIZER_PROGRAM" class="input-15"
               description="ORGANIZER_ENROLLED_PROGRAM" required="true">
            <option value="">ORGANIZER_SELECT_PROGRAM</option>
        </field>
    </fieldset>
</form>
