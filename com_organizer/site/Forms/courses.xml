<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" label="ORGANIZER_SEARCH" class="form-control" hint="SEARCH"/>
        <field name="status" type="list" label="ORGANIZER_STATUS" class="input-13" onchange="this.form.submit();">
            <option value="">ORGANIZER_CURRENT_COURSES</option>
            <option value="-1">ORGANIZER_ALL_COURSES</option>
        </field>
        <field name="termID" type="Terms" label="ORGANIZER_TERM" class="input-13" onchange="this.form.submit();">
            <option value="">ORGANIZER_ALL_TERMS</option>
            <option value="-1">ORGANIZER_NO_TERM</option>
        </field>
        <field name="campusID" type="Campuses" label="ORGANIZER_CAMPUS" onchange="this.form.submit();">
            <option value="">ORGANIZER_ALL_CAMPUSES</option>
            <option value="-1">ORGANIZER_NO_CAMPUS</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="Limitbox" class="input-mini" default="50" onchange="this.form.submit();"/>
    </fields>
</form>
