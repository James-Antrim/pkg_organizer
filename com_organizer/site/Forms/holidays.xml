<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fields name="filter">
        <field name="search" type="Blank" label="SEARCH" hint="SEARCH"/>
        <field name="termID" type="Terms" label="TERM" class="input-13" onchange="this.form.submit();">
            <option value="">ALL_TERMS</option>
        </field>
        <field name="type" type="Options" label="HOLIDAY_TYPE" onchange="this.form.submit();">
            <option value="">ALL_HOLIDAYS</option>
            <option value="1">GAP_DAYS</option>
            <option value="3">HOLIDAYS</option>
            <option value="2">CLOSED_DAYS</option>
        </field>
        <field name="status" type="Options" label="STATE" onchange="this.form.submit();">
            <option value="-1">ALL_STATES</option>
            <option value="0">NOT_EXPIRED</option>
            <option value="1">EXPIRED</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="limitbox" class="input-mini" onchange="this.form.submit();"/>
    </fields>
</form>