<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" label="ORGANIZER_SEARCH" class="form-control" hint="SEARCH"/>
        <field name="useDefaults" type="list" label="ORGANIZER_DEFAULT_SETTINGS" onchange="this.form.submit();">
            <option value="">ORGANIZER_ALL_DEFAULT_VALUES</option>
            <option value="1">ORGANIZER_DEFAULT_USED</option>
            <option value="0">ORGANIZER_DEFAULT_NOT_USED</option>
        </field>
        <field name="display" type="list" label="ORGANIZER_DISPLAY_BEHAVIOUR" onchange="this.form.submit();">
            <option value="">ORGANIZER_ALL_DISPLAY_BEHAVIOURS</option>
            <option value="1">ORGANIZER_DAILY_PLAN</option>
            <option value="2">ORGANIZER_MIXED_PLAN</option>
            <option value="3">ORGANIZER_CONTENT_DISPLAY</option>
            <option value="0">ORGANIZER_EVENT_LIST</option>
        </field>
        <field name="content" type="GenericOptions" label="ORGANIZER_DISPLAY_CONTENT" conditions="content != ''"
               onchange="this.form.submit();" table="organizer_monitors" textcolumn="content" valuecolumn="content"
               valueParameter="content">
            <option value="">ORGANIZER_ALL_CONTENTS</option>
            <option value="-1">ORGANIZER_NO_CONTENT</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="Limitbox" class="input-mini" default="50" onchange="this.form.submit();"/>
    </fields>
</form>
