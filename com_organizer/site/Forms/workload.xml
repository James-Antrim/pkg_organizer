<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field name="organizationID" type="OrganizationAssociations" label="ORGANIZER_ORGANIZATION"
               onchange="this.form.submit();">
            <option value="">ORGANIZER_SELECT_ORGANIZATION</option>
        </field>
        <field name="termID" type="Terms" label="ORGANIZER_TERM" class="input-13"/>
        <field name="personID" type="Persons" label="ORGANIZER_PERSON" onchange="this.form.submit();">
            <option value="">ORGANIZER_SELECT_PERSON</option>
        </field>
        <field name="weeks" type="Integer" label="ORGANIZER_WORKLOAD_WEEKS" default="13" first="1" onchange="this.form.submit();"
               last="52" step="1"/>
        <field name="separate" type="list" label="ORGANIZER_SEPARATE_PROGRAMS" default="0">
            <option value="0">ORGANIZER_NO</option>
            <option value="1">ORGANIZER_YES</option>
        </field>
    </fieldset>
</form>
