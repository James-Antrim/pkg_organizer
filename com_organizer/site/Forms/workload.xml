<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details">
        <field name="organizationID" type="OrganizationAssociations" label="ORGANIZATION"
               onchange="this.form.submit();">
            <option value="">SELECT_ORGANIZATION</option>
        </field>
        <field name="termID" type="Terms" label="TERM" class="input-13"/>
        <field name="personID" type="Persons" label="PERSON" onchange="this.form.submit();">
            <option value="">SELECT_PERSON</option>
        </field>
        <field name="weeks" type="Integer" label="WORKLOAD_WEEKS" default="13" first="1" onchange="this.form.submit();"
               last="52" step="1"/>
        <field name="separate" type="Options" label="SEPARATE_PROGRAMS" default="0">
            <option value="0">NO</option>
            <option value="1">YES</option>
        </field>
    </fieldset>
</form>
