<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details">
        <field name="id" type="hidden"/>
        <field name="code" type="Blank" label="UNTIS_ID" maxlength="60" required="true"/>
        <field name="name_de" type="Blank" label="NAME_DE" maxlength="150" required="true"/>
        <field name="name_en" type="Blank" label="NAME_EN" maxlength="150" required="true"/>
        <field name="grid" type="Periods" formsource="grid_blocks" multiple="true" buttons="add,remove"
               layout="joomla.form.field.subform.repeatable-table" label="GRID"/>
        <field name="startDay" type="Options" label="START_DAY" default="1" required="true">
            <option value='1'>MONDAY</option>
            <option value='2'>TUESDAY</option>
            <option value='3'>WEDNESDAY</option>
            <option value='4'>THURSDAY</option>
            <option value='5'>FRIDAY</option>
            <option value='6'>SATURDAY</option>
            <option value='0'>SUNDAY</option>
        </field>
        <field name="endDay" type="Options" label="END_DAY" default="6" required="true">
            <option value='1'>MONDAY</option>
            <option value='2'>TUESDAY</option>
            <option value='3'>WEDNESDAY</option>
            <option value='4'>THURSDAY</option>
            <option value='5'>FRIDAY</option>
            <option value='6'>SATURDAY</option>
            <option value='0'>SUNDAY</option>
        </field>
        <field name="isDefault" type="Options" label="DEFAULT" default="1">
            <option value='1'>YES</option>
            <option value='0'>NO</option>
        </field>
    </fieldset>
</form>
