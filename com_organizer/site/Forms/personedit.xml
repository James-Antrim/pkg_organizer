<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details">
        <field name="id" type="hidden"/>
        <field name="surname" type="Blank" label="SURNAME" class="required" maxlength="255" required="true"/>
        <field name="forename" type="Blank" label="FORENAME" maxlength="255"/>
        <field name="code" type="Blank" label="UNTIS_ID" maxlength="60" required="true"/>
        <field name="username" type="Blank" label="USERNAME"/>
        <field name="title" type="Blank" label="TITLE" maxlength="45"/>
        <field name="fieldID" type="GenericOptions" label="FIELD" localized="true" table="organizer_fields"
               textcolumn="name" valuecolumn="id">
            <option value="">NO_FIELD</option>
        </field>
        <field name="organizationIDs" type="OrganizationAssociations" label="ORGANIZATION"/>
        <field name="active" type="Options" label="ACTIVE" default="1">
            <option value="1">ACTIVE</option>
            <option value="0">INACTIVE</option>
        </field>
        <field name="suppress" type="Options" label="SUPPRESS" default="0">
            <option value="0">SHOWN</option>
            <option value="1">SUPPRESSED</option>
        </field>
    </fieldset>
</form>
