<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fieldset name="details" label="ORGANIZER_ATTRIBUTES_BASIC">
        <field name="id" type="hidden"/>
        <field name="code" type="text" label="ORGANIZER_UNTIS_ID" maxlength="60" required="true"/>
        <field name="organizationID" type="OrganizationAssociations" label="ORGANIZER_ORGANIZATION" disabled="true"
               required="true"/>
        <field name="campusID" type="Campuses" label="ORGANIZER_CAMPUS">
            <option value="">ORGANIZER_NO_CAMPUSES</option>
        </field>
        <field name="subjectNo" type="text" label="ORGANIZER_MODULE_ID" maxlength="45"/>
        <field name="preparatory" type="list" label="ORGANIZER_PREP_COURSE" default="0">
            <option value="1">ORGANIZER_YES</option>
            <option value="0">ORGANIZER_NO</option>
        </field>
        <field name="deadline" type="Integer" label="ORGANIZER_DEADLINE" default="0" first="0" last="30" step="1"/>
        <field name="fee" type="Integer" label="ORGANIZER_FEE" default="0" first="0" last="500" step="5"/>
        <field name="maxParticipants" type="Integer" label="ORGANIZER_MAX_PARTICIPANTS" default="1000" first="20" last="1000"
               step="20"/>
        <field name="registrationType" type="list" label="ORGANIZER_REGISTRATION">
            <option value="">ORGANIZER_NO_REGISTRATION</option>
            <option value="0">ORGANIZER_FIFO</option>
            <option value="1">ORGANIZER_MANUAL</option>
        </field>
        <field name="active" type="list" label="ORGANIZER_ACTIVE" default="1">
            <option value="1">ORGANIZER_ACTIVE</option>
            <option value="0">ORGANIZER_INACTIVE</option>
        </field>
        <field name="suppress" type="list" label="ORGANIZER_SUPPRESS" default="0">
            <option value="0">ORGANIZER_SHOWN</option>
            <option value="1">ORGANIZER_SUPPRESSED</option>
        </field>
    </fieldset>
    <fieldset name="de" label="ORGANIZER_ATTRIBUTES_DE">
        <field name="name_de" type="text" label="ORGANIZER_NAME_DE" maxlength="150" required="true"/>
        <field name="description_de" type="editor" label="ORGANIZER_DESC_DE"/>
        <field name="content_de" type="editor" label="ORGANIZER_CONTENT_DE"/>
        <field name="organization_de" type="editor" label="ORGANIZER_COURSE_ORGANIZATION_DE"/>
        <field name="pretests_de" type="editor" label="ORGANIZER_PRETESTS_DE"/>
        <field name="contact_de" type="editor" label="ORGANIZER_POC_DE"/>
        <field name="courseContact_de" type="editor" label="ORGANIZER_COURSE_POC_DE"/>
    </fieldset>
    <fieldset name="en" label="ORGANIZER_ATTRIBUTES_EN">
        <field name="name_en" type="text" label="ORGANIZER_NAME_EN" maxlength="150" required="true"/>
        <field name="description_en" type="editor" label="ORGANIZER_DESC_EN"/>
        <field name="content_en" type="editor" label="ORGANIZER_CONTENT_EN"/>
        <field name="organization_en" type="editor" label="ORGANIZER_COURSE_ORGANIZATION_EN"/>
        <field name="pretests_en" type="editor" label="ORGANIZER_PRETESTS_EN"/>
        <field name="contact_en" type="editor" label="ORGANIZER_POC_EN"/>
        <field name="courseContact_en" type="editor" label="ORGANIZER_COURSE_POC_EN"/>
    </fieldset>
    <fieldset name="coordinators" label="ORGANIZER_COORDINATORS">
        <field name="coordinatorIDs" type="Coordinators" label="ORGANIZER_COORDINATORS" multiple="multiple" size="20"/>
    </fieldset>
</form>
