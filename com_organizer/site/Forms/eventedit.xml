<?xml version="1.0" encoding="UTF-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details" label="ATTRIBUTES_BASIC">
        <field name="id" type="hidden"/>
        <field name="code" type="Blank" label="UNTIS_ID" maxlength="60" required="true"/>
        <field name="organizationID" type="OrganizationAssociations" label="ORGANIZATION" disabled="true"
               required="true"/>
        <field name="campusID" type="Campuses" label="CAMPUS">
            <option value="">NO_CAMPUSES</option>
        </field>
        <field name="subjectNo" type="Blank" label="MODULE_ID" maxlength="45"/>
        <field name="preparatory" type="Options" label="PREP_COURSE" default="0">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </field>
        <field name="deadline" type="Integer" label="DEADLINE" default="0" first="1" last="30" step="1"/>
        <field name="fee" type="Integer" label="COURSE_FEE" default="0" first="0" last="500" step="5"/>
        <field name="maxParticipants" type="Integer" label="MAX_PARTICIPANTS" default="1000" first="20" last="1000"
               step="20"/>
        <field name="registrationType" type="Options" label="REGISTRATION">
            <option value="">NO_REGISTRATION</option>
            <option value="0">FIFO</option>
            <option value="1">MANUAL</option>
        </field>
        <field name="active" type="Options" label="ACTIVE" default="1">
            <option value="1">ACTIVE</option>
            <option value="0">INACTIVE</option>
        </field>
        <field name="suppress" type="Options" label="SUPPRESS" default="0">
            <option value="0">SHOWN</option>
            <option value="1">SUPPRESSED</option>
        </field>
    </fieldset>
    <fieldset name="de" label="ATTRIBUTES_DE">
        <field name="name_de" type="Blank" label="NAME_DE" maxlength="150" required="true"/>
        <field name="description_de" type="Editor" label="ORGANIZER_DESC_DE" description="ORGANIZER_DESC_DE_DESC"/>
        <field name="content_de" type="Editor" label="CONTENT_DE" description="CONTENT_DE_DESC"/>
        <field name="organization_de" type="Editor" label="COURSE_ORGANIZATION_DE"
               description="COURSE_ORGANIZATION_DE_DESC"/>
        <field name="pretests_de" type="Editor" label="PRETESTS_DE" description="PRETESTS_DE_DESC"/>
        <field name="contact_de" type="Editor" label="GENERAL_CONTACT_DE" description="GENERAL_CONTACT_DE_DESC"/>
        <field name="courseContact_de" type="Editor" label="COURSE_CONTACT_DE" description="COURSE_CONTACT_DE_DESC"/>
    </fieldset>
    <fieldset name="en" label="ATTRIBUTES_EN">
        <field name="name_en" type="Blank" label="NAME_EN" maxlength="150" required="true"/>
        <field name="description_en" type="Editor" label="ORGANIZER_DESC_EN" description="ORGANIZER_DESC_EN_DESC"/>
        <field name="content_de" type="Editor" label="CONTENT_DE" description="CONTENT_EN_DESC"/>
        <field name="organization_en" type="Editor" label="COURSE_ORGANIZATION_EN"
               description="COURSE_ORGANIZATION_EN_DESC"/>
        <field name="pretests_en" type="Editor" label="PRETESTS_EN" description="PRETESTS_EN_DESC"/>
        <field name="contact_en" type="Editor" label="GENERAL_CONTACT_EN" description="GENERAL_CONTACT_EN_DESC"/>
        <field name="courseContact_en" type="Editor" label="COURSE_CONTACT_EN" description="COURSE_CONTACT_EN_DESC"/>
    </fieldset>
    <fieldset name="coordinators" label="COORDINATORS">
        <field name="coordinatorIDs" type="Coordinators" label="COORDINATORS" multiple="multiple" size="20"/>
    </fieldset>
</form>
