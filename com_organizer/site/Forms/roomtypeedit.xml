<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details">
        <field name="id" type="hidden"/>
        <field name="code" type="Blank" label="UNTIS_ID" maxlength="60" required="true"/>
        <field type="spacer"/>
        <field name="name_en" type="Blank" label="NAME_EN" maxlength="150" required="true"/>
        <field name="description_en" type="Wiz" label="DESC_EN"/>
        <field type="spacer"/>
        <field name="name_de" type="Blank" label="NAME_DE" maxlength="150" required="true"/>
        <field name="description_de" type="Wiz" label="DESC_DE"/>
        <field type="spacer"/>
        <field name="equipment_list" type="Periods" formsource="equipment_blocks" multiple="true" buttons="add,remove"
               layout="joomla.form.field.subform.repeatable-table" label="ORGANIZER_EQUIPMENT_LIST"/>
        <field name="room_dintypeID" type="GenericOptions" label="ORGANIZER_DIN_TYPES" localized="true"
               table="organizer_room_dintypes"
               textcolumn="name" valuecolumn="id" required="true">
            <option value="0">SELECT_DINTYPE</option>
        </field>
        <field type="spacer"/>
        <field name="minCapacity" type="Integer" label="MIN_CAPACITY" default="-1" first="10" last="9990" step="10">
            <option value="-1">NO_INPUT</option>
        </field>
        <field name="maxCapacity" type="Integer" label="MAX_CAPACITY" default="-1" first="9" last="9999" step="10">
            <option value="-1">NO_INPUT</option>
        </field>
        <field name="suppress" type="Options" label="SUPPRESS" default="0">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </field>
    </fieldset>
</form>
