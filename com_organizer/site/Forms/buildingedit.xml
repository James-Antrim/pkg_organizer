<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fieldset name="details">
        <field name="id" type="hidden"/>
        <field name="name" type="Blank" label="NAME" class="required" maxlength="150" required="true"/>
        <field name="campusID" type="Campuses" label="CAMPUS">
            <option value="">NO_CAMPUS</option>
        </field>
        <field name="location" type="Blank" label="LOCATION" class="validate-gps" maxlength="20"/>
        <field name="address" type="Blank" label="STREET" class="validate-address" maxlength="255"/>
        <field name="propertyType" type="Options" label="PROPERTY_TYPE">
            <option value="0">UNKNOWN</option>
            <option value="1">OWNED</option>
            <option value="2">RENTED</option>
            <option value="3">USED</option>
        </field>
        <field name="active" type="Options" label="ACTIVE" default="1">
            <option value="1">ACTIVE</option>
            <option value="0">INACTIVE</option>
        </field>
    </fieldset>
</form>
