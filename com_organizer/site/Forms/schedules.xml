<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Organizer\Fields">
    <fields name="filter">
        <field name="search" type="Blank" label="SEARCH" class="form-control" hint="SEARCH"/>
        <field name="organizationID" type="OrganizationFilter" label="ORGANIZATION" access="schedule"
               onchange="this.form.submit();">
            <option value="">ALL_ORGANIZATIONS</option>
        </field>
        <field name="termID" type="Terms" label="ORGANIZATION" onchange="this.form.submit();">
            <option value="">ALL_TERMS</option>
        </field>
    </fields>
    <fields name="list">
        <field name="limit" type="Limitbox" class="input-mini" default="50" onchange="this.form.submit();"/>
    </fields>
</form>
