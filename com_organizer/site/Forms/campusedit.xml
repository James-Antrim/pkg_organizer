<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details">
        <field name="id" type="hidden"/>
        <field name="name_de" type="text" label="ORGANIZER_NAME_DE" class="required" maxlength="150" required="true"/>
        <field name="name_en" type="text" label="ORGANIZER_NAME_EN" class="required" maxlength="150" required="true"/>
        <field name="parentID" type="Campuses" label="ORGANIZER_PARENT_CAMPUS">
            <option value="">ORGANIZER_NO_PARENT_CAMPUS</option>
        </field>
        <field name="isCity" type="list" label="ORGANIZER_IS_CITY" default="0">
            <option value="1">ORGANIZER_YES</option>
            <option value="0">ORGANIZER_NO</option>
        </field>
        <field name="location" type="text" label="ORGANIZER_LOCATION" class="validate-gps" maxlength="20"/>
        <field name="address" type="text" label="ORGANIZER_STREET" class="validate-address" maxlength="255"/>
        <field name="city" type="text" label="ORGANIZER_CITY" class="validate-alpha-german" maxlength="60"/>
        <field name="zipCode" type="text" label="ORGANIZER_ZIP_CODE" class="validate-alphanumeric" maxlength="60"/>
        <field name="gridID" type="Grids" label="ORGANIZER_GRIDS">
            <option value="">ORGANIZER_DEFAULT_GRID</option>
        </field>
        <field name="active" type="list" label="ORGANIZER_ACTIVE" default="1">
            <option value="1">ORGANIZER_ACTIVE</option>
            <option value="0">ORGANIZER_INACTIVE</option>
        </field>
    </fieldset>
</form>
